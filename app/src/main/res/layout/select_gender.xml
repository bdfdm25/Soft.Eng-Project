<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT YOUR GENDER:"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/textView12"
        android:layout_marginTop="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/genderMale_button_sp"
        android:background="@mipmap/ic_gender_m"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="72dp" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/genderFemale_button_sp"
        android:background="@mipmap/ic_gender_f"
        android:layout_alignTop="@+id/genderMale_button_sp"
        android:layout_toRightOf="@+id/genderMale_button_sp"
        android:layout_toEndOf="@+id/genderMale_button_sp" />

</RelativeLayout>