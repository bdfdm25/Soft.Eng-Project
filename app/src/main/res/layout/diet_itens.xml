<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/diet_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/new_diet2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal: "
        android:textStyle="bold"
        android:id="@+id/label_diet_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@+id/diet_icon"
        android:layout_toRightOf="@+id/diet_icon"
        android:layout_toEndOf="@+id/diet_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details: "
        android:textStyle="bold"
        android:id="@+id/label_diet_description"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/label_diet_name"
        android:layout_toRightOf="@+id/diet_icon"
        android:layout_toEndOf="@+id/diet_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/diet_name"
        android:layout_marginLeft="150dp"
        android:layout_alignTop="@+id/label_diet_name"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/diet_description"
        android:layout_marginLeft="150dp"
        android:layout_alignTop="@+id/label_diet_description" />


</RelativeLayout>