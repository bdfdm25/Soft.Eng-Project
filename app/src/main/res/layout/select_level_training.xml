<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FITNESS LEVEL:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="120dp"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="115dp"
        android:id="@+id/beginner_training_button"
        android:background="@drawable/beginner"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="51dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="115dp"
        android:id="@+id/intermediate_training_button"
        android:background="@drawable/intermediate"
        android:layout_below="@+id/beginner_training_button"
        android:layout_marginTop="39dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="50dp"
        android:id="@+id/advanced_training_button"
        android:background="@drawable/advanced"
        android:layout_below="@+id/intermediate_training_button"/>

</RelativeLayout>